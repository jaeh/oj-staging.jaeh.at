#imageGallery
  ul
    display inline-block
    margin 0 1%

  li
    float left
    margin 0 1% 2%
    max-width 23%

  a
    display inline-block

  img
    max-width 100%
    max-height 100%

@media all and (max-width 400px)
  #imageGallery
    margin 0 2%

    li
      margin 0 2% 4%
      max-width 46%

@media all and (orientation landscape) and (max-height 400px)
  #imageGallery
    margin 2% 2% 0 2%

@media all and (min-width 1400px)
  #imageGallery
    li
      width 12.286%
