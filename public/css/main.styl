body_font_color = #222
body_bg_color = #fefefe
a_color = #444
a_color_hover = #111

body_font_color_dark = #777
body_bg_color_dark = #222
a_color_dark = #666
a_color_hover_dark = #fefefe

/* nib gives us reset.css */
global-reset()
/*@import reset*/
@import icomoon
@import font
@import nojs
@import gallery
@import extraMenu
/*
@import triangle
*/

html
  height 100%
  display block

body
  background-color body_bg_color
  color body_font_color
  margin 0 auto
  overflow hidden
  text-align center
  width 100%
  position absolute
  font-size 13px
  user-select none
  
  &.animated
    transition background-color .5s

    header.main
      transition opacity .5s
    #content
      transition color .5s, margin .5s
    #extra-menu-container
      transition background-color .5s, opacity .5s
      li
        a
          transition color .5s, background-color .5s
    a
      transition color .5s

  #extra-menu-container
    background-color body_bg_color

  &.dark
    background-color body_bg_color_dark
    color body_font_color_dark

    a
      color a_color_dark

      &:hover
        color a_color_hover_dark

    #extra-menu-container
      background-color body_bg_color_dark

  &.js
    &.fullscreen
      header.main
        opacity 0

      #content
        margin 40px 0

      #gallery
        height 100%

        h2
          opacity 0
  &.page-gallery
    overflow-y scroll

  #content
    display block

    &.gallery
      line-height 0

    &.about
      max-width 900px
    &.contact
      max-width 600px

    &.about,
    &.contact
      margin 93px auto
      width 90%
      min-width inherit
      text-align left

      img
        max-width 50%
        float left
        margin 0 1em 0 0

      h2
        margin 0 0 1em


form
  input, 
  textarea
    transition all .5s
    border 0 none
    -webkit-appearance none
    font-size 1em

header.main
  left 0
  margin 40px 0
  position absolute
  top 0
  width 100%

  nav#menu
    width 100%

    ul
      li
        display inline
        margin 0 1em

        a
          &:hover
            text-decoration underline
          &.active
            text-decoration underline

a
  color a_color
  cursor pointer
  text-decoration none  

  &:hover
    color a_color_hover

#content
  display inline-block
  margin 93px 0 0
  max-height 90%
  min-width 95%
  position relative
  width auto

noscript#single
  display inline-block
  max-height 85%
  width 100%

  img
    max-width 90%
    width auto
#gallery-container
  li
    left 0
    opacity 0
    position absolute
    top 0
    transition opacity 1s
    width 100%
    z-index 0

    img
      transition max-height .5s, max-width .5s, margin .5s
      z-index 3

    h2
      font-size .8em
      letter-spacing .02em
      line-height 1.5em
      margin 15px 0 0
      opacity 0
      position relative
      width 100%
      transition opacity .5s

    &.displayed
      opacity 1
      z-index 1

      h2
        opacity 1
        user-select initial

    &.right
      cursor url(/img/cursor-right.png), auto;
    &.left
      cursor url(/img/cursor-left.png), auto;
    &.zoom-in
      cursor url(/img/cursor-zoom-out.png), auto;
    &.zoom-out
      cursor url(/img/cursor-zoom-in.png), auto;

form
  max-width 800px
  margin 0 auto

  input, textarea
    color body_font_color
    background-color darken(body_bg_color, 5%)
    border-radius 2px
    display block
    width 100%
    margin 1em 0
    padding 1em
    box-sizing border-box
    
    &[type="submit"]
      color #aaa
      cursor pointer

      &:hover
        text-decoration underline

  textarea
    height 150px

body.dark
  form
    input, textarea
      color body_font_color_dark
      background-color lighten(body_bg_color_dark, 5%)

      &[type="submit"]
        color #aaa
.error
  color #f00

@media (max-width: 400px)
  #extra-menu-container
    .btn-container.fullscreen
      display none
  header.main
    margin-bottom 22px
    margin-top 22px
  #content
    margin-bottom 57px
    margin-top 57px


@media all and (orientation:landscape) and (max-height: 400px)
  body.animated
    #gallery-container
      li
        img
          transition initial
  #content
    margin 0

  header.main
    display none
  #extra-menu-container
    display none

  #gallery
    h2
      display none
    img
      margin 17px 0

  body.fullscreen
    #gallery
      img
        margin 17px 0

@media all and (orientation: portrait) and (max-width 400px)
  body.animated
    #gallery-container
      li
        img
          transition initial

@media all and (min-width 1400px), all and (min-height 1400px)
  body.animated
    #gallery-container
      li
        img
          transition height .5s, width .5s, max-height .5s, max-width .5s, opacity .5s, margin .5s

@media all and (min-width 1600px)
  body
    font-size 14px
  #gallery
    h2
      font-size 13px
