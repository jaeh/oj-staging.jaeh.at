@import reset

body_color = #111
body_bg_color = #fefefe
a_color = #444
a_color_hover = #999

html, body
	height 100%

body
	background-color body_bg_color
	color body_color
	width 90%
	overflow hidden
	margin 0 auto
	text-align center

body.nojs
	#content
		overflow visible
		height auto

		#imageGallery
			width 100%
			max-height inherit
			height auto
			display inline-block
			img
				margin 0
				width 100%
				float none
				max-width 100%
				max-height inherit
				margin 1em 0 0

header.main
	position fixed
	height 70px
	background-color #fefefe
	width 100%
	left 0
	padding 10px 0 0

	nav#menu
		width 100%

		ul
			li
				display inline
				margin 0 0.5em

a
	color a_color
	&:hover
		color a_color_hover

a#logo
	background-image url('/img/logo.png')
	width 81px
	height 28px
	display block
	margin 0 auto 0.5em

#content
	margin 1em 0 0
	display inline-block
	overflow hidden
	height 89%
	width 100%
	padding 60px 0 0

#imageGallery
	width 500%
	max-height 90%
	display inline-block
	overflow hidden

	img
		float left
		margin 0
		height auto
		width 20%

#imageMenu
	width 100%
	height 10%

	img
		float left
		height 100%

@media (max-width: 400px)
	body
		width 95%
