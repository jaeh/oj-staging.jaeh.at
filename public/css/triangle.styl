.triangle
  border-color transparent
  border-style solid 
  border-width .5em
  height 0
  width 0
  &.down
    border-bottom-width 0
    border-top-color body_bg_color_night
  &.left 
    border-left-width 0
    border-right-color body_bg_color_night
  &.right
    border-left-color body_bg_color_night
    border-right-width 0
  &.up
    border-bottom-color body_bg_color_night
    border-top-width 0
    
body.night
  .triangle
    &.down
      border-top-color body_bg_color
    &.left 
      border-right-color body_bg_color
    &.right
      border-left-color body_bg_color
    &.up
      border-bottom-color body_bg_color
