button_bg_color = #f7f7f7
button_bg_color_hover = #777

button_font_color = #888
button_font_color_hover = #eee

button_bg_color_dark = #333
button_bg_color_dark_hover = #777
button_font_color_dark = #666
button_font_color_dark_hover = #fff

button_bg_color_small = #eee

#extra-menu-container
  bottom 0
  display block
  margin 15px 0 0
  padding 7px 0 15px
  position fixed
  text-align center
  width 100%
  z-index 2

  ul
    margin 0 auto
    position relative
    display inline-block

body.fullscreen 
  #extra-menu-container
    opacity 0
    cursor default
    pointer-events none


.btn-container
  float left
  height 100%
  margin 0 3px 0
  min-width 50px
  width 17%
  z-index 1
  

  a
    background-color button_bg_color
    color button_font_color
    display block
    font-size 9px
    height 100%
    margin 0
    padding 5.5px 0
    width 100%

    &.icon
      font-size 12px
      padding 4px 0
    &:hover
      background-color button_bg_color_dark_hover
      color button_font_color_dark_hover

body.dark
  .btn-container
    a
      background-color button_bg_color_dark
      color button_font_color_dark

      &:hover
        background-color button_bg_color_dark_hover
        color button_font_color_dark_hover


@media (max-width: 400px)
  body
    .btn-container
      a 
        font-size 11px
        padding 3px 0 6px
        background-color button_bg_color_small

        &.icon
          font-size 13px
          padding 3px 0 4px
        &:hover
          color button_font_color
          background-color button_bg_color

    &.dark
      .btn-container
        a:hover
          background-color button_bg_color_dark
          color button_font_color_dark

@media (min-width: 1600px)
  body
    .btn-container
      a
        font-size 10px
        padding 4px 0 6px

        &.icon
          font-size 14px
          padding 2px 0 4px
