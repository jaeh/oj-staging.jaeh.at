button_bg_color = #f7f7f7
button_bg_color_hover = #777

button_font_color = #aaa
button_font_color_hover = #eee

button_bg_color_dark = #333
button_bg_color_dark_hover = #777
button_font_color_dark = #666
button_font_color_dark_hover = #fff

button_bg_color_small = #eee

#extra-menu-container
  bottom 25px
  display block
  position absolute
  width 100%
  z-index 2
  text-align center

  ul
    margin 0 auto
    position relative
    display inline-block

.btn-container
  float left
  height 100%
  margin 0 3px 0
  width 60px
  z-index 1

  a
    background-color button_bg_color
    color button_font_color
    display block
    font-size .7em
    height 100%
    margin 0
    padding .6em 0
    transition(.5s)
    width 100%

    &.icon
      font-size 0.9em
      padding .35em 0
    &:hover
      background-color button_bg_color_dark_hover
      color button_font_color_dark_hover

body.dark
  .btn-container
    a
      background-color button_bg_color_dark
      color button_font_color_dark

      &:hover
        background-color button_bg_color_dark_hover
        color button_font_color_dark_hover


@media (max-width: 400px)
  body
    .btn-container
      a 
        font-size .9em
        background-color button_bg_color_small

        &.icon
          font-size 1.1em
          padding 0.43em 0
        &:hover
          color button_font_color
          background-color button_bg_color

    &.dark
      .btn-container
        a:hover
          background-color button_bg_color_dark
          color button_font_color_dark
