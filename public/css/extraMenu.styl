#extra-menu-container
  position relative
  display block
  z-index 2
  text-align center
  width 100%
  margin .5em 0

  li
    display inline

#fullscreen-container,
#daynight-container
  z-index 1
  display inline
  margin 0 .3em 0

  a
    background-image url("/img/dots.png")
    border-radius 100%
    display inline-block
    height 17px
    width 17px

#daynight-container

  &.bottom
    top auto
    bottom .5em

  a
    background-position-x 38px

    &:hover
      background-position-x 57px

#fullscreen-container
  a
    background-position-x 0

    &:hover
      background-position 19px

body.night
  #daynight-container
    a
      background-position-x 57px

      &:hover
        background-position-x 38px
        
      
  #fullscreen-container
    a
      background-position-x 57px

      &:hover
        background-position 38px


@media (max-width: 450px)
  body
    #extra-menu-container
      bottom .5em
      font-size 1.2em
      left .5em
      position fixed
      top auto

      li
        display inline-block
