doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Oliver Jiszda Photography
    link(rel='icon' href='/favicon.ico')
    meta(name='viewport' content='width=max-device-width, initial-scale=1.0, minimum-scale=1.0, minimal-ui')
    meta(name='apple-mobile-web-app-capable' content='yes')
    link(rel='stylesheet', href='/css/main.css')

    meta(property='og:title' content='Oliver Jiszda Photography')
    meta(name='description' property='og:description' content='Oliver Jiszda Photography')
    block head

  block body
    body(class='nojs dark page-' + page)
      #wrapper
        header.main
          block header
            nav#menu
              ul
                li
                  a(href='/' class=page === "index" ? "active" : "") oliver jiszda
                li
                  a(href='/gallery' class=page === "gallery" ? "active" : "") gallery
                li
                  a(href='/contact' class=page === "contact" ? "active" : "") contact
                li
                  a(href='http://jiszda.tumblr.com' target='utopia') blog

        block content
          div.content empty body content

        script#load-js(src='/js/load.js')
        block scripts
