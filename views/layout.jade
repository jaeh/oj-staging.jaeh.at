doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Oliver Jiszda Photography
    link(rel='icon' href='/favicon.ico')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, minimal-ui')
    meta(name='apple-mobile-web-app-capable' content='yes')
    link(rel='stylesheet', href='/css/main.css')

    meta(property='og:title' content='Oliver Jiszda Photography')
    meta(name='description' property='og:description' content='Oliver Jiszda Photography')
    block head

  block body
    body(class='nojs dark page-' + page)
      #wrapper
        header.main
          block header
            nav#menu
              ul
                if menu
                  for link in menu
                    li
                      a(
                        href=link.href
                        class=page === link.name ? "active" : "" 
                        target=link.target
                      )= link.text

        block content
          div.content empty body content

      script#load-js(src='/js/load.js')
      block scripts
